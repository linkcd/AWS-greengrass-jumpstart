{
    "RecipeFormatVersion": "2020-01-25",
    "ComponentName": "com.example.sensehat.led",
    "ComponentVersion": "1.0.0",
    "ComponentDescription": "Component for displaying a number on sensehat led.",
    "ComponentPublisher": "linkcd",
    "ComponentConfiguration": {
        "DefaultConfiguration": {
            "number": "1"
        }
    },
    "Manifests": [
        {
            "Platform": {
                "os": "linux"
            },
            "Lifecycle": {
                "Run": {
                    "RequiresPrivilege": true,
                    "script": "python3 -u {artifacts:path}/led.py '{configuration:/number}'"
                }
            }
        }
    ]
}