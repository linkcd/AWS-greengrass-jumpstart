{
    "RecipeFormatVersion": "2020-01-25",
    "ComponentName": "com.example.sensehat.joystick",
    "ComponentVersion": "1.0.0",
    "ComponentDescription": "Getting joystick event and send back to iot core via mqtt",
    "ComponentPublisher": "linkcd",
    "ComponentConfiguration": {
      "DefaultConfiguration": {
        "joystick_topic": "pihat/joystick",
        "accessControl": {
          "aws.greengrass.ipc.mqttproxy": {
            "com.example.mqtt:mqttproxy:1": {
              "policyDescription": "Allows access to pub to mqtt.",
              "operations": [
                "aws.greengrass#PublishToIoTCore"
              ],
              "resources": [
                "pihat/joystick"
              ]
            }
          }
        }
      }
    },
    "Manifests": [
      {
        "Platform": {
          "os": "linux"
        },
        "Lifecycle": {
          "Install": {
            "RequiresPrivilege": true,
            "script": "python3 -m pip install --user awsiotsdk"
          },
          "Run": {
            "RequiresPrivilege": true,
            "script": "python3 -u {artifacts:path}/joystick.py '{configuration:/joystick_topic}'"
          }
        }
      }
    ]
  }